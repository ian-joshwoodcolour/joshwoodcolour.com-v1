{
  "name": "josh-wood-colour-shopify",
  "version": "0.0.1",
  "scripts": {
    "build-fe": "NODE_ENV=production webpack --progress --colors -p --mode production --display minimal",
    "build-fe:dev": "NODE_ENV=production webpack --progress --colors -p --mode development",
    "deploy": "NODE_ENV=production npm run build-fe && slate deploy -e production",
    "format": "prettier --config .prettierrc {src,test}/**/*.js --loglevel silent --write",
    "start": "NODE_ENV=development concurrently \"slate start\" \"webpack --progress --colors -w --mode development\"",
    "watch": "NODE_ENV=development concurrently \"slate watch\" \"webpack --progress --colors -w --mode development\"",
    "unit-tests": "NODE_ENV=test mocha --opts ./mocha.opts",
    "unit-tests:coverage": "NODE=test nyc npm run unit-tests",
    "ui-tests": "NODE_ENV=test mocha --opts ./mocha-ui.opts",
    "precommit": "npm run format && npm run unit-tests && npm run build-fe"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "@shopify/slate-tools": "0.12.1",
    "animejs": "^2.2.0",
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-sitrep": "^1.0.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-flow-comments": "^6.22.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.0",
    "choices.js": "^3.0.4",
    "clipboard": "^2.0.0",
    "concurrently": "^3.5.0",
    "conversational-form": "^0.9.51",
    "copy-webpack-plugin": "^4.5.0",
