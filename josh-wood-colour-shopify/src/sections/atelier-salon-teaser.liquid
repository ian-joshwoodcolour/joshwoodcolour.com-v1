<section class="o-wrapper o-section">
    <div class="o-layout u-flex@mobile">
        <div class="o-layout__item u-5/12@mobile u-flex u-direction-column u-justify-center">
            <h3 class="u-heading u-mb">{{ section.blocks[0].settings.title }}</h3>

            <p>{{ section.blocks[0].settings.text }}</p>

            <a href="{{ section.blocks[0].settings.cta_url }}" class="c-button c-button--black u-mt">
                {{ section.blocks[0].settings.cta_label }}
            </a>
        </div><div class="o-layout__item u-1/12 u-mb+">
        </div><div class="o-layout__item u-6/12@mobile">
            {%- assign card_size = 'square' -%}
            {%- assign has_frame = true -%}
            {%- assign frame_position = 'right' -%}
            {%- assign frame_classes = 'gold-tall' -%}
            {%- assign photo = section.blocks[0].settings.photo | img_url: '1000x1000' -%}
            {%- assign classes = '' -%}
            {% include 'card' %}
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Atelier Salon Teaser",
    "blocks": [
        {
            "name": "Teaser content",
            "type": "object",
            "limit": 1,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "photo",
                    "label": "Photo"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "url",
                    "id": "cta_url",
                    "label": "CTA URL"
                },
                {
                    "type": "text",
                    "id": "cta_label",
                    "label": "CTA Label"
                }
            ]
        }
    ]
}
{% endschema %}
