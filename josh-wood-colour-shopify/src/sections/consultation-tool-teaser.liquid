<section class="o-section o-wrapper">
    <div class="u-p u-p+@mobile u-p++@tabletSmall u-text-center u-border-grey-4">
        <h3 class="u-heading u-mb">{{ section.blocks[0].settings.title }}</h3>

        <p>{{ section.blocks[0].settings.text }}</p>

        <a href="{{ section.blocks[0].settings.cta_url }}" class="c-button c-button--black u-mt">
            {{ section.blocks[0].settings.cta_label }}
        </a>
    </div>
</section>

{% schema %}

{
    "name": "Consultation Tool Teaser",
    "blocks": [
        {
            "name": "Teaser content",
            "type": "object",
            "limit": 1,
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                }, {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text"
                }, {
                    "type": "url",
                    "id": "cta_url",
                    "label": "CTA URL"
                }, {
                    "type": "text",
                    "id": "cta_label",
                    "label": "CTA Label"
                }
            ]
        }
    ]
}

{% endschema %}
