<div class="o-layout u-stack-layout@mobile u-flex@mobile">
    <div class="o-layout__item u-6/12@mobile">
        {%- assign card_size = 'square' -%}
        {%- assign has_frame = true -%}
        {%- assign frame_position = 'left' -%}
        {%- assign frame_classes = 'tall' -%}
        {%- assign photo = section.blocks[0].settings.photo | img_url: '1000x1000' -%}
        {% include 'card' %}
    </div><div class="o-layout__item u-1/12 u-mb">
    </div><div class="o-layout__item u-5/12@mobile u-flex u-direction-column u-justify-center">
        <h2 class="u-heading u-h3 u-mb">{{ section.blocks[0].settings.title }}</h2>

        <p>{{ section.blocks[0].settings.text }}</p>

        {%- if section.blocks[0].settings.cta_label and section.blocks[0].settings.cta_text -%}
            <a href="{{ section.blocks[0].settings.cta_url }}" class="c-button c-button--black u-mt">
                {{ section.blocks[0].settings.cta_label }}
            </a>
        {%- endif -%}
    </div>
</div>

{% schema %}
{
    "name": "About Josh 2016 1",
    "blocks": [
        {
            "name": "About Josh 2016 1",
            "type": "object",
            "limit": 1,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "photo",
                    "label": "Photo"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "url",
                    "id": "cta_url",
                    "label": "CTA URL"
                },
                {
                    "type": "text",
                    "id": "cta_label",
                    "label": "CTA Label"
                }
            ]
        }
    ]
}
{% endschema %}
