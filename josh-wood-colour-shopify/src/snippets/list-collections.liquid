    <section class="o-section o-wrapper u-pt++@mobile">
        {%- assign card_size = 'default' -%}
        {%- assign collection = collections.care-range -%}
        {%- assign sub_collections = 'shampoo|conditioner|everything-mask|shade-shot' | split: '|' -%}
        {%- assign all_collections = collections -%}
        {%- assign disable_photo_lazyload = false -%}
        {%- include 'collection-list' -%}
    </section>

