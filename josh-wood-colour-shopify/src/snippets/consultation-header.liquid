        <div class="c-modal__wrapper wide t-white js-modal-wrapper u-rounded u-flex u-direction-column u-justify-center" style="overflow: hidden;">
            {%- assign modal_name = 'consultation' -%}
            <div id="consultation-modal-intro">
                <button aria-label="Close" class="c-button c-button--grey-light c-button--no-block u-circle c-modal__close js-modal-close" data-modal="consultation" title="Close">
