{%- assign back_button_label = 'Log in' -%}
{%- assign back_button_url = '/account/login' -%}
{% include 'back-button' %}

<section class="o-section o-wrapper">
    <div class="u-mw-450 u-m-auto">
        <h1 class="u-heading u-h3 u-mb">{{ 'customer.activate_account.title' | t }}</h1>
        <p class="u-mb u-mb+@mobile">{{ 'customer.activate_account.subtext' | t }}</p>

        {% form 'activate_customer_password' %}
            {%- if form.errors -%}
                <div class="s-form">
                    {{ form.errors | default_errors }}
                </div>
            {%- endif -%}
            
            <div class="c-form__field">
                <input type="password"
                    name="customer[password]"
                    id="CustomerPassword"
                    class="c-form__input u-1/1 {% if form.errors contains 'password' %}c-form__input--error{% endif %}"
                    placeholder="{{ 'customer.activate_account.password' | t }}"
                >
            </div>
            <div class="c-form__field">
                <input type="password"
                    name="customer[password_confirmation]"
                    id="CustomerPasswordConfirmation"
                    class="c-form__input u-1/1 {% if form.errors contains 'password_confirmation' %}c-form__input--error{% endif %}"
                    placeholder="{{ 'customer.activate_account.password_confirm' | t }}"
                >
            </div>

            <button type="submit" class="c-button c-button--black u-1/1 u-mt">
                {{ 'customer.activate_account.submit' | t }}
            </button>
        {% endform %}
    </div>
</section>
